@{
  Layout = "_Layout";
}
<div class="well">
  <h4><u>Directions:</u></h4>
  <p>This webapp will take a single word and search for full word matches in a given piece of text.</p>
</div>
<div class="well">
  <form class="form-group" action="/" method="post">
    <label for="word">Enter the word you are searching for:</label>
    <input type="text" name="word" class="form-control">
    <br>
    <label for="word">Enter the text you want to search through:</label>
    <input type="text" name="text" class="form-control">
    <hr>
    <button type="submit" class="btn btn-danger">Submit!</button>
  </form>
</div>
